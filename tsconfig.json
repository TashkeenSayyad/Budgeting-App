{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/desktop/src/*"]
    },
    "types": ["node", "vite/client"]
  },
  "include": ["apps/desktop", "tests", "forge.config.ts", "vite.*.config.ts"]
}
